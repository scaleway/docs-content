{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "singleQuote": true,
  "trailingComma": "all",
  "semi": false,
  "arrowParens": "avoid",
  "tabWidth": 2,
  "printWidth": 80,
  "sortPackageJson": false,
  "ignorePatterns": [
    "node_modules/",
    "package.json",
    "pnpm-lock.yaml",
    "*.mdx",
    "styles/"
  ]
}
